<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>long-ez.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Long-EZ/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>canard</object-name>
    <object-name>profondeur</object-name>
    <object-name>bol</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>directionG</object-name>
    <object-name>directionD</object-name>
    <object-name>cacheG</object-name>
    <object-name>cacheD</object-name>
    <object-name>tourverriere</object-name>

    <object-name>lampes</object-name>
    <object-name>helice</object-name>
    <object-name>trous</object-name>
    <object-name>roueA</object-name>
    <object-name>axeG</object-name>
    <object-name>trouG</object-name>
    <object-name>roueG</object-name>
    <object-name>axeD</object-name>
    <object-name>trouD</object-name>
    <object-name>roueD</object-name>

    <!-- Objets transparents -->
    <object-name>verriere</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
    <object-name>verre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>canard</object-name>
    <object-name>profondeur</object-name>
    <object-name>bol</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>directionG</object-name>
    <object-name>directionD</object-name>
    <object-name>cacheG</object-name>
    <object-name>cacheD</object-name>
    <object-name>tourverriere</object-name>

    <object-name>lampes</object-name>
    <object-name>helice</object-name>
    <object-name>trous</object-name>
    <object-name>roueA</object-name>
    <object-name>axeG</object-name>
    <object-name>trouG</object-name>
    <object-name>roueG</object-name>
    <object-name>axeD</object-name>
    <object-name>trouD</object-name>
    <object-name>roueD</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <effect>
    <inherits-from>Aircraft/Generic/Effects/Fuselagereflect</inherits-from>
    <object-name>fuselage</object-name>
    <object-name>canard</object-name>
    <object-name>profondeur</object-name>
    <object-name>bol</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>directionG</object-name>
    <object-name>directionD</object-name>
    <object-name>cacheG</object-name>
    <object-name>cacheD</object-name>
    <object-name>tourverriere</object-name>
  </effect>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>verriere</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>verriere</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>verre</object-name>
  </animation>

  <!-- Effets sur le sol -->
  <!-- Roue avant -->
  <model>
    <path>Aircraft/Long-EZ/Models/Effects/ground/ground0.xml</path>
    <offsets>
      <x-m> -1.993 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.199 </z-m>
    </offsets>
  </model>

  <!-- Roue gauche -->
  <model>
    <path>Aircraft/Long-EZ/Models/Effects/ground/ground1.xml</path>
    <offsets>
      <x-m>  0.390 </x-m>
      <y-m> -0.708 </y-m>
      <z-m> -1.199 </z-m>
    </offsets>
  </model>

  <!-- Roue droite -->
  <model>
    <path>Aircraft/Long-EZ/Models/Effects/ground/ground2.xml</path>
    <offsets>
      <x-m>  0.390 </x-m>
      <y-m>  0.708 </y-m>
      <z-m> -1.199 </z-m>
    </offsets>
  </model>

  <!-- Interieur -->
  <model>
    <path>Aircraft/Long-EZ/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Une ombre pour OSG -->
  <model>
    <name>shadowOSG</name>
    <path>Aircraft/Long-EZ/Models/shadow.xml</path>
  </model>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> 1.610 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.009 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>directionG</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> -30 </factor>
    <axis>
      <x1-m>  2.067 </x1-m>
      <y1-m> -3.786 </y1-m>
      <z1-m>  0.008 </z1-m>
      <x2-m>  2.385 </x2-m>
      <y2-m> -3.786 </y2-m>
      <z2-m>  0.984 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>directionD</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> -30 </factor>
    <axis>
      <x1-m> 2.067 </x1-m>
      <y1-m> 3.786 </y1-m>
      <z1-m> 0.008 </z1-m>
      <x2-m> 2.385 </x2-m>
      <y2-m> 3.786 </y2-m>
      <z2-m> 0.984 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> -20 </factor>
    <center>
      <x-m> -1.685 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.030 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> -20 </factor>
    <axis>
      <x1-m>  1.365 </x1-m>
      <y1-m> -1.349 </y1-m>
      <z1-m> -0.038 </z1-m>
      <x2-m>  1.729 </x2-m>
      <y2-m> -2.861 </y2-m>
      <z2-m> -0.034 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor> -20 </factor>
    <axis>
      <x1-m>  1.729 </x1-m>
      <y1-m>  2.861 </y1-m>
      <z1-m> -0.034 </z1-m>
      <x2-m>  1.365 </x2-m>
      <y2-m>  1.349 </y2-m>
      <z2-m> -0.038 </z2-m>
    </axis>
  </animation>

  <animation>
    <name>AxeAvant</name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
  </animation>

  <!-- Rentrée de la roue avant -->
  <animation>
    <type>rotate</type>
    <object-name>AxeAvant</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 62 </dep></entry>
      <entry><ind> 1 </ind><dep>  0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.286 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.279 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <name>TrainGauche</name>
    <object-name>roueG</object-name>
    <object-name>axeG</object-name>
    <object-name>cacheG</object-name>
    <object-name>trouG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainGauche</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>   5 </dep></entry>
      <entry><ind> 0.1 </ind><dep>   0 </dep></entry>
      <entry><ind> 1.0 </ind><dep> -10 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.510 </x-m>
      <y-m> -0.196 </y-m>
      <z-m> -0.437 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainDroit</name>
    <object-name>roueD</object-name>
    <object-name>axeD</object-name>
    <object-name>cacheD</object-name>
    <object-name>trouD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainDroit</object-name>
    <property>gear/gear[2]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  -5 </dep></entry>
      <entry><ind> 0.1 </ind><dep>   0 </dep></entry>
      <entry><ind> 1.0 </ind><dep>  10 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.510 </x-m>
      <y-m>  0.196 </y-m>
      <z-m> -0.437 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Rotation de la roue avant en fonction de la gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>AxeAvant</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> -2.286 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.279 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  0.385 </x-m>
      <y-m> -0.706 </y-m>
      <z-m> -1.058 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  0.385 </x-m>
      <y-m>  0.706 </y-m>
      <z-m> -1.058 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.993 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.071 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Canopy -->
  <animation>
    <name>Canopy</name>
    <object-name>verriere</object-name>
    <object-name>tourverriere</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Canopy</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> -45 </dep></entry>
    </interpolation>
    <center>
      <x-m> -0.238 </x-m>
      <y-m>  0.281 </y-m>
      <z-m>  0.137 </z-m>
    </center>
    <axis>
      <x>  1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Ajout des effets lumineux -->
  <model>
    <path>Aircraft/Long-EZ/Models/lights/beacon.xml</path>
    <offsets>
      <x-m> 0.742 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.360 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Long-EZ/Models/lights/RedLight.xml</path>
    <offsets>
      <x-m>  1.568 </x-m>
      <y-m> -3.802 </y-m>
      <z-m> -0.037 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Long-EZ/Models/lights/GreenLight.xml</path>
    <offsets>
      <x-m>  1.568 </x-m>
      <y-m>  3.802 </y-m>
      <z-m> -0.037 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Long-EZ/Models/lights/WhiteLight.xml</path>
    <offsets>
      <x-m>  0.578 </x-m>
      <y-m> -1.443 </y-m>
      <z-m> -0.037 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Long-EZ/Models/lights/WhiteLight.xml</path>
    <offsets>
      <x-m>  0.578 </x-m>
      <y-m>  1.443 </y-m>
      <z-m> -0.037 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Long-EZ/Models/lights/StrobeWhite.xml</path>
    <offsets>
      <x-m>  1.588 </x-m>
      <y-m> -3.802 </y-m>
      <z-m> -0.037 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Long-EZ/Models/lights/StrobeWhite.xml</path>
    <offsets>
      <x-m>  1.588 </x-m>
      <y-m>  3.802 </y-m>
      <z-m> -0.037 </z-m>
    </offsets>
  </model>

  <!-- Wing light cone -->
  <model>
    <name>Landing-Light-Left</name>
    <path>Aircraft/Long-EZ/Models/lights/light-cone.xml</path>
    <offsets>
      <x-m>        0.576 </x-m>
      <y-m>       -1.438 </y-m>
      <z-m>       -0.032 </z-m>
      <pitch-deg> -7.500 </pitch-deg>
    </offsets>
  </model>

  <model>
    <name>Landing-Light-Right</name>
    <path>Aircraft/Long-EZ/Models/lights/light-cone.xml</path>
    <offsets>
      <x-m>        0.576 </x-m>
      <y-m>        1.438 </y-m>
      <z-m>       -0.032 </z-m>
      <pitch-deg> -7.500 </pitch-deg>
    </offsets>
  </model>

  <animation>
    <name>AllWingLight</name>
    <object-name>Landing-Light-Left</object-name>
    <object-name>Landing-Light-Right</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>AllWingLight</object-name>
    <condition>
      <and>
        <equals>
          <property>controls/switches/landing-light</property>
          <value> 1 </value>
        </equals>
        <equals>
          <property>controls/electric/battery-switch</property>
          <value> 1 </value>
        </equals>
      </and>
    </condition>
  </animation>

</PropertyList>

